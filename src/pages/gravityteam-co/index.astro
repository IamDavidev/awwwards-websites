---
import Layout from '../../layouts/Layout.astro';
import About from './layouts/About.svelte';
import CoinsSlider from './layouts/CoinsSlider.astro';
import Exchnages from './layouts/Exchnages.svelte';
import Header from './layouts/Header.svelte';
import MarketMarking from './layouts/MarketMarking.svelte';
import Partners from './layouts/Partners.svelte';
import Testimonails from './layouts/Testimonails.svelte';
---

<Layout title='Gravity Team'>
	<main>
		<div class='container f-c-c-c'>
			<header class='w-full'>
				<Header />
				<CoinsSlider />
			</header>
			<About />
			<MarketMarking />
			<Exchnages />
			<Partners client:load />
			<Testimonails client:load />

			<style>
				main {
					background-color: var(--gravity-bg);
				}
				header {
					display: flex;
					justify-items: space-between;
					gap: 3rem;
					align-items: center;
					flex-direction: column;
					margin-bottom: 2rem;
				}
			</style>
		</div>
	</main>
</Layout>
